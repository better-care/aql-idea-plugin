<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.markopi.ideafirstplugin</id>
    <name>idea-first-plugin</name>
    <vendor>markopi</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.markopi.ideafirstplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.markopi.ideafirstplugin.services.MyProjectService"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="AQL"
                  implementationClass="com.github.markopi.ideafirstplugin.aql.AqlFileType"
                  fieldName="INSTANCE"
                  language="AQL"
                  extensions="aql"/>
        <lang.parserDefinition language="AQL" implementationClass="com.github.markopi.ideafirstplugin.aql.AqlTextParserDefinition"/>
        <annotator language="AQL" implementationClass="com.github.markopi.ideafirstplugin.aql.AqlAnnotator"/>
        <completion.contributor language="AQL"
                                implementationClass="com.github.markopi.ideafirstplugin.aql.AqlCompletionContributor"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.markopi.ideafirstplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

</idea-plugin>
